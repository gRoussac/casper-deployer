{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@casper-api/api-interfaces": ["libs/api-interfaces/src/index.ts"],
      "@casper-data/data-access-deployer": [
        "libs/data-access/deployer/src/index.ts"
      ],
      "@casper-data/data-access-users": ["libs/data-access/users/src/index.ts"],
      "@casper-deployer/deployer": ["libs/feature/deployer/src/index.ts"],
      "@casper-escrow/buyer": ["libs/feature/buyer/src/index.ts"],
      "@casper-escrow/escrow": ["libs/feature/escrow/src/index.ts"],
      "@casper-escrow/escrower": ["libs/feature/escrower/src/index.ts"],
      "@casper-escrow/postman": ["libs/feature/postman/src/index.ts"],
      "@casper-escrow/seller": ["libs/feature/seller/src/index.ts"],
      "@casper-ui/argument": ["libs/ui/argument/src/index.ts"],
      "@casper-ui/header": ["libs/ui/header/src/index.ts"],
      "@casper-ui/tabs": ["libs/ui/tabs/src/index.ts"],
      "@casper-util/config": ["libs/util/config/src/index.ts"],
      "@casper-util/hightlight-webworker": [
        "libs/util/hihlight-webworker/src/index.ts"
      ],
      "@casper-util/routeur-hub": [
        "libs/util/services/routeur-hub/src/index.ts"
      ],
      "@casper-util/storage": ["libs/util/services/storage/src/index.ts"],
      "@casper-util/toaster": ["libs/util/services/toaster/src/index.ts"],
      "@casper-util/tokens": ["libs/util/tokens/src/index.ts"],
      "@casper-util/wasm": ["libs/util/services/wasm/src/index.ts"],
      "@casper-util/watcher": ["libs/util/services/watcher/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
